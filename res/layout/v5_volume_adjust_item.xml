<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="0.0dip"
    android:layout_weight="1.0"
    android:gravity="center_vertical" >

    <ImageView
        android:id="@id/v5_volume_mute_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="@dimen/v5_volume_panel_seeekbar_width"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@id/v5_volume_description_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingStart="5.0dip"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@color/v5_volume_panel_text_color" />

        <SeekBar
            android:id="@id/v5_volume_seekbar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            progressBar="@drawable/v5_volume_seekbar_progress"
            progressBarMask="@drawable/v5_volume_seekbar_progress_mask"
            android:progressDrawable="@drawable/v5_volume_seekbar_bg" />
    </LinearLayout>

</LinearLayout>