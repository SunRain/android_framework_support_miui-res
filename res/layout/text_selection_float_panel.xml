<?xml version="1.0" encoding="utf-8"?>
<android.widget.FloatPanelView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@id/panel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/textview_panel_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@id/buttonCopy"
            style="@style/TextViewFloatPanelButton"
            android:text="@*android:string/copy" />

        <ImageView
            android:id="@id/separator1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/textview_panel_separator" />

        <TextView
            android:id="@id/buttonCut"
            style="@style/TextViewFloatPanelButton"
            android:text="@*android:string/cut" />

        <ImageView
            android:id="@id/separator2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/textview_panel_separator" />

        <TextView
            android:id="@id/buttonPaste"
            style="@style/TextViewFloatPanelButton"
            android:text="@*android:string/paste" />
    </LinearLayout>

    <ImageView
        android:id="@id/arrow_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/textview_panel_arrow_up"
        android:visibility="gone" />

    <ImageView
        android:id="@id/arrow_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/textview_panel_arrow_down"
        android:visibility="gone" />

</android.widget.FloatPanelView>