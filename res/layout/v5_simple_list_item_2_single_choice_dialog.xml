<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="?android:attr/dropDownItemStyle"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingStart="0.0dip" >

    <RadioButton
        android:id="@id/android_radio"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:button="@drawable/v5_dialog_btn_radio_light"
        android:clickable="false"
        android:focusable="false"
        android:gravity="center_vertical"
        android:paddingEnd="10.0dip" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:duplicateParentState="true"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@*android:id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:duplicateParentState="true"
            android:ellipsize="marquee"
            android:gravity="left|center"
            android:singleLine="true"
            android:textAppearance="@style/V5.TextAppearance.MenuList" />

        <TextView
            android:id="@*android:id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:gravity="left|center"
            android:singleLine="true"
            android:textAppearance="@style/V5.TextAppearance.List.Secondary" />
    </LinearLayout>

</LinearLayout>