<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/android_parentPanel"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layoutAnimation="@anim/v5_dialog_layout_anim"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@id/android_topPanel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@id/android_title_template"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16.0dip"
            android:layout_marginStart="16.0dip"
            android:gravity="left|center"
            android:minHeight="@dimen/v5_alert_dialog_title_height"
            android:orientation="horizontal" >

            <ImageView
                android:id="@id/android_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="8.0dip"
                android:src="@null"
                android:visibility="gone" />

            <com.android.internal.widget.DialogTitle
                android:id="@id/android_alertTitle"
                style="?android:attr/windowTitleStyle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@id/android_contentPanel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:orientation="vertical" >

        <ScrollView
            android:id="@id/android_scrollView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false" >

            <TextView
                android:id="@id/android_message"
                style="?android:attr/textAppearanceMedium"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8.0dip"
                android:paddingEnd="16.0dip"
                android:paddingStart="16.0dip"
                android:paddingTop="8.0dip" />
        </ScrollView>
    </LinearLayout>

    <FrameLayout
        android:id="@id/android_customPanel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0" >

        <FrameLayout
            android:id="@id/android_custom"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    </FrameLayout>

    <LinearLayout
        android:id="@id/android_buttonPanel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:divider="?android:dividerHorizontal"
        android:dividerPadding="0.0dip"
        android:minHeight="@dimen/v5_alert_dialog_button_bar_height"
        android:orientation="vertical"
        android:showDividers="beginning" >

        <LinearLayout
            style="?android:attr/buttonBarStyle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:measureWithLargestChild="true"
            android:minHeight="@dimen/v5_alert_dialog_button_bar_height"
            android:orientation="horizontal" >

            <Button
                android:id="@*android:id/button2"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center"
                android:maxLines="2"
                android:textSize="14.0sp" />

            <Button
                android:id="@*android:id/button3"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center"
                android:maxLines="2"
                android:textSize="14.0sp" />

            <Button
                android:id="@*android:id/button1"
                style="@miui:style/V5.Widget.Button.Dialog.Default"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center"
                android:maxLines="2" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>